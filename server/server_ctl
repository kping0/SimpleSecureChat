if [ "$1" == "start" ] || [ "$1" == "START" ];then
	echo "Starting Server"
	./SSCServer & disown
elif [ "$1" == "stop" ] || [ "$1" == "STOP" ];then
	echo "Stopping Server"
	pkill SSCServer	
elif [ "$1" == "log" ]; then
	echo "Showing log, Ctrl-C to exit"
	sleep 2
	watch -n 0.5 cat SSCServer.log 
else
	echo "Usage: server_ctl.sh [START|STOP]"
fi
